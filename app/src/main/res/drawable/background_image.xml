<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Solid Color Layer -->
    <item>
        <color android:color="#FF4081" /> <!-- Solid color, e.g., pink -->
    </item>

    <!-- Gradient Layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#007ACC"
                android:endColor="#FF4081"
                android:angle="45"/>
        </shape>
    </item>

</layer-list>
