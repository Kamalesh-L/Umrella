<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="#FFFFFF" /> <!-- White -->

    <!-- Border Color -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" /> <!-- Light Gray -->

    <!-- Corner Radius -->
    <corners android:radius="8dp" />

    <!-- Padding (optional) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
